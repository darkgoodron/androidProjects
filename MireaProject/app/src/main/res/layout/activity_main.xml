<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_room"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="onClickRoom"
        android:text="Room"
        app:layout_constraintBottom_toTopOf="@+id/button_gmap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_calc"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:onClick="onClickCalculator"
        android:text="Calculator"
        app:layout_constraintBottom_toTopOf="@+id/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_player"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="158dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:onClick="onClickPlayer"
        android:text="Player"
        app:layout_constraintBottom_toTopOf="@+id/button_gmap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button_settings" />

    <Button
        android:id="@+id/button_gmap"
        android:layout_width="103dp"
        android:layout_height="56dp"
        android:onClick="onClickGmap"
        android:text="google map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="4dp"
        android:onClick="onClickHistory"
        android:text="история"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_gmap"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_firebase"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:onClick="onClickFireBase"
        android:text="вход в Firebase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_history"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_settings"
        android:layout_width="138dp"
        android:layout_height="49dp"
        android:layout_marginBottom="4dp"
        android:onClick="onClickSettings"
        android:text="настройки"
        app:layout_constraintBottom_toTopOf="@+id/button_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_hardware"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:onClick="onClickHardware"
        android:text="железо"
        app:layout_constraintBottom_toTopOf="@+id/button_firebase"
        app:layout_constraintEnd_toStartOf="@+id/button_settings"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="368dp"
        android:layout_height="496dp"
        app:layout_constraintBottom_toTopOf="@+id/button_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>